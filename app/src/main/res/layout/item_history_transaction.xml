<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintItemTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogoTransaction"
        android:src="@drawable/baseline_arrow_right_24"
        app:layout_constraintTop_toTopOf="@id/tvTitleNotif"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleNotif"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Januari 2024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvTitleNotif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Credit Transaction"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivLogoTransaction"
        app:layout_constraintTop_toBottomOf="@id/tvDate"/>
    <TextView
        android:id="@+id/tvSubtitleNotif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transaction to Mandiri - Paulus Tambunan"
        app:layout_constraintStart_toStartOf="@id/tvTitleNotif"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNotif"/>
    <TextView
        android:id="@+id/tvStatusTransaction"
        android:text="Berhasil"
        android:textColor="#1C7925"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitleNotif"
        app:layout_constraintStart_toStartOf="@id/tvSubtitleNotif"/>
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 100.000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>